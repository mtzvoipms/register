#!/usr/bin/env bash
set -Eeuo pipefail

echo -e "\n=== ShellCheck"
file --mime-type ./* bin/* | grep 'text/x-shellscript' | cut -d':' -f1 |
    xargs -r shellcheck

echo -e "\n=== RuboCop"
rubocop

echo -e "\n=== HAML-Lint"
haml-lint

echo -e "\n=== Yarn Lint"
yarn lint

echo -e "\n=== Rails Test"
rails test

echo -e "\n=== Yarn Test"
yarn test

echo
