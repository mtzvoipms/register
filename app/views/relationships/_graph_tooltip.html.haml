.graph-tooltip.graph-tooltip--relationship
  - if relationship.source
    = render(partial: 'entities/graph_tooltip_title', locals: { entity: relationship.source })
  = render(partial: "shared/relationship_interests", locals: { relationship: relationship })
  - if relationship.target
    = render(partial: 'entities/graph_tooltip_title', locals: { entity: relationship.target })
  .graph-tooltip__links
    - if relationship.source && relationship.target
      = link_to entity_relationship_path(relationship.target&.id, relationship.source&.id), class: 'btn btn-sm btn-primary view-page' do
        %i.fa.fa-file
        %span= t("entity_graph.relationship_page_link")
