- content_for(:title, @data_source[:name])
.content.page-content
  .container-fluid
    .row
      .col-lg-8
        .page-header
          %h1= @data_source[:name]
        .page-text
          - if @data_source[:overview].present?
            .data-source-content
              %h2= t '.overview'
              = sanitize @data_source[:overview]
              - if @data_source[:ownership].present?
                %h2= t '.ownership'
                = sanitize @data_source[:ownership]
              - else
                %h2= t '.ownership_direct'
                = sanitize @data_source[:ownership_direct]
                %h2= t '.ownership_indirect'
                = sanitize @data_source[:ownership_indirect]
              %h2= t '.exclusions'
              = sanitize @data_source[:exclusions]
          - if @data_source[:availability].present?
            .data-source-content
              %h2= t '.availability'
              = sanitize @data_source[:availability]
      .col-lg-4
        - if @data_source[:url].present?
          .frame-light.meta
            .frame-wrap
              %h6= t '.links'
              %p= link_to t('.links_source'), @data_source[:url], class: 'external', target: '_blank', rel: 'noopener'
